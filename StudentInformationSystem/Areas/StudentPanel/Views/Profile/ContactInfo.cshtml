@model Contact
@{
    ViewData["Title"] = "İletişim Bilgilerim";
}
@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
<div class="alert alert-success">
    @ViewBag.SuccessMessage
</div>
}

<h1>İletişim Bilgilerim</h1>

<form class="mb-3" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="card mt-3">
        <div class="card-body">
            <div class="form-group">
                <label>Adres</label>
                <input asp-for="Address" type="text" class="form-control" placeholder="Adres">
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>
            <div class="form-group">
                <label>İl</label>
                <input asp-for="City" type="text" class="form-control" placeholder="Şehir">
                <span class="text-danger" asp-validation-for="City"></span>
            </div>
            <div class="form-group">
                <label>İlçe</label>
                <input asp-for="District" type="text" class="form-control" placeholder="İlçe">
                <span class="text-danger" asp-validation-for="District"></span>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" type="text" class="form-control" placeholder="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label>GSM</label>
                <input asp-for="GSM" type="number" class="form-control" placeholder="GSM">
                <span class="text-danger" asp-validation-for="GSM"></span>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-lg btn-block mt-3">Güncelle</button>
</form>
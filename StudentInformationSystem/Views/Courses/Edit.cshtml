@model CourseUpdateViewModel
@{
    ViewData["Title"] = "Ders Kaydet";
}
@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<form class="mb-3" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="card mt-3">
        <div class="card-body">
            <div class="form-group">
                <label>Ders Kodu</label>
                <input asp-for="Code" type="text" class="form-control" placeholder="Ders Kodu">
                <span class="text-danger" asp-validation-for="Code"></span>
            </div>
            <div class="form-group">
                <label>Ders Adı</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Ders Adı">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label>Ders Kredisi</label>
                <input asp-for="Credit" type="number" class="form-control" placeholder="Ders Kredisi">
                <span class="text-danger" asp-validation-for="Credit"></span>
            </div>
            <label>Ders Aktif Mi?</label>
            <input asp-for="Status" type="checkbox">
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-lg btn-block mt-3">Güncelle</button>
</form>
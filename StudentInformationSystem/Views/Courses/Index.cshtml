@model List<Course>
@{
    ViewData["Title"] = "Tüm Dersler";
}

<h1>Dersler</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Ders Kodu</th>
            <th scope="col">Ders Adı</th>
            <th scope="col">Durum</th>
            <th scope="col">Kredi</th>
            <th scope="col">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Course course in Model)
        {
            <tr>
                <td>@course.Code</td>
                <td>@course.Name</td>
                <td>@(course.Status ? "Aktif" : "Pasif")</td>
                <td>@course.Credit</td>
                <th>
                    <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id">Düzenle</a>
                </th>
            </tr>
        }
    </tbody>
</table>
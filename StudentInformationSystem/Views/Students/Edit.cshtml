@model StudentUpdateViewModel
@{
    ViewData["Title"] = "Öğrenci Güncelle";
}
@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<div class="alert alert-info">
    * ile işaretli alanlar zorunludur!
</div>

<form class="mb-3" method="post">
    <div class="card mt-3">
        <div class="card-header">
            Kimlik Bilgileri
        </div>
        <input asp-for="IdentityId" type="hidden" />
        <div class="card-body">
            <div class="form-group">
                <label>Ad *</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Ad">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label>Soyad *</label>
                <input asp-for="Surname" type="text" class="form-control" placeholder="Soyad">
                <span class="text-danger" asp-validation-for="Surname"></span>
            </div>
            <div class="form-group">
                <label>TC Kimlik No</label>
                <input asp-for="TcNo" type="number" class="form-control" placeholder="TC Kimlik No">
            </div>
            <div class="form-group">
                <label>Doğum Yeri</label>
                <input asp-for="PlaceOfBirth" type="text" class="form-control" placeholder="Doğum Yeri">
            </div>
            <div class="form-group">
                <label>Doğum Tarihi</label>
                <input asp-for="DateOfBirth" type="date" class="form-control">
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            İletişim Bilgileri
        </div>
        <input asp-for="ContactId" type="hidden" />
        <div class="card-body">
            <div class="form-group">
                <label>Adres</label>
                <input asp-for="Address" type="text" class="form-control" placeholder="Adres">
            </div>
            <div class="form-group">
                <label>Şehir</label>
                <input asp-for="City" type="text" class="form-control" placeholder="Şehir">
            </div>
            <div class="form-group">
                <label>İlçe</label>
                <input asp-for="District" type="text" class="form-control" placeholder="İlçe">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Email">
            </div>
            <div class="form-group">
                <label>GSM</label>
                <input asp-for="GSM" type="number" class="form-control" placeholder="GSM">
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-lg btn-block mt-3">Güncelle</button>
</form>